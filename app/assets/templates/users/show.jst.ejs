<header>
  <a href="#">FOLLOWING</a>
  <a href="#">FOLLOWERS</a>

  <% if (user === TwitterClone.currentUser) { %>
    <a href="#">Edit profile</a>
  <% } else { %>
    <!-- FOLLOW BUTTON... -->
  <% } %>
</header>

<section class="left-section">
  <img class="avatar" src="<%= user.escape('avatar_url') %>">

  <h2><%= user.escape('name') %></h2>
  <small>@<%= user.escape('username') %></small>
</section>

<section class="center-section">
  <h3>Tweets</h3>

  <ul class="tweets-list">
    <% user.tweets().forEach(function(tweet) { %>
      <%= JST['tweets/preview']({ user: user, tweet: tweet }) %>
    <% }); %>
  </ul>
</section>

