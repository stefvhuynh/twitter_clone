<div class="user-card">
  <header class="user-card-banner"></header>
  <main class="user-card-main">
    <%= JST['pages/user_card_info']({ user: user }) %>

    <ul class="user-card-links clear-fix">
      <li>
        <a href="#users/<%= user.id %>">
          <small>TWEETS</small>
          <h3><%= user.escape('tweet_count') %></h3>
        </a>
      </li>
      <li>
        <a href="#users/<%= user.id %>">
          <small>FOLLOWING</small>
          <h3><%= user.escape('followed_count') %></h3>
        </a>
      </li>
      <li>
        <a href="#users/<%= user.id %>">
          <small>FOLLOWERS</small>
          <h3><%= user.escape('follower_count') %></h3>
        </a>
      </li>
    </ul>
  </main>

  <footer class="user-card-footer">
    <div id="user-card-new-tweet">Compose new Tweet...</div>

    <form id="user-card-new-tweet-form" class="display-off clear-fix">
      <textarea class="new-tweet-textbox" name="tweet[body]"></textarea>
      <span class="character-count">140</span>
      <button class="user-card-button new-tweet-button blue-button">
        Tweet
      </button>
    </form>
  </footer>
</div>



